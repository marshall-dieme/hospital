{% extends 'base.html.twig' %}

{% block title %}Specialite index{% endblock %}

{% block body %}
<br><br>

    <div class="container">
        <div class="float-right">
            <a name="newUser" id="newUser" class="btn btn-success" href="{{ path('specialite_new') }}" role="button"><i class="fa fa-plus" aria-hidden="true"></i> Nouveau</a>
        </div>
        <br><br>
        <table class="table">
            <thead>
                <tr>
                    <th>Specialite</th>
                    <th>Service</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for specialite in specialites %}
                <tr>
                    <td>{{ specialite.id }}</td>
                    <td>{{ specialite.nomSpecialite }}</td>
                    <td>{{ specialite.service.nomService }}</td>
                    <td>
                        <a href="{{ path('specialite_show', {'id': specialite.id}) }}">show</a>
                        <a href="{{ path('specialite_edit', {'id': specialite.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
