{% extends "base.html.twig" %}

{% block title %}
    Dashboad | Users
{% endblock %}

{% block body %}
<br><br>
    <div class="container">
        <div class="float-right">
				<a name="newUser" id="newUser" class="btn btn-success" href="{{ path('user_new') }}" role="button"><i class="fa fa-user-plus" aria-hidden="true"></i> Nouveau</a>
			</div>
            <br><br>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Adresse</th>
                    <th>Telephone</th>
                    <th>Poste</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td scope="row">{{ user.nom }}</td>
                        <td>{{ user.prenom }}</td>
                        <td>{{ user.adresse }}</td>
                        <td>{{ user.telephone }}</td>
                        <td>{{ user.profil.libelle }}</td>
                        <td>
                            <a href="{{ path('user_show', {'id': user.id}) }}" type="button" name="show" id="show" class="btn btn-primary"><i class="fa fa-eye" aria-hidden="true"></i></a>
                            <a href="{{ path('user_edit', {'id': user.id}) }}" type="button" name="edit" id="edit" class="btn btn-info"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            <a href="{{ path('user_delete', {'id': user.id}) }}" type="button" name="delete" id="delete" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
{% endblock %}